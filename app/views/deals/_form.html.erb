<%= form_for(@deal, html: { class: 'row g-3' }) do |f| %>
  <div class="col-md-4">
    <%= f.label :customer, 'Customer', class: 'form-label' %>
    <%= f.text_field :customer, class: 'form-control', required: true %>
  </div>

  <div class="col-md-4">
    <%= f.label :description, 'Description', class: 'form-label' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="col-md-4">
    <%= f.label :value, 'Value', class: 'form-label' %>
    <div class="input-group">
      <span class="input-group-text">$</span>
      <%= f.text_field :value, class: 'form-control', placeholder: '0.00' %>
    </div>
  </div>

  <div class="col-12">
    <%= f.submit 'Create Deal', class: 'btn btn-primary px-4' %>
  </div>
<% end %>
