<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Edit Deal</h5>
        </div>

        <div class="card-body">
          <%= form_for(@deal, html: { class: 'row g-3' }) do |f| %>
            <div class="col-md-6">
              <%= f.label :customer, 'Customer', class: 'form-label' %>
              <%= f.text_field :customer, class: 'form-control', required: true %>
            </div>

            <div class="col-md-6">
              <%= f.label :description, 'Description', class: 'form-label' %>
              <%= f.text_field :description, class: 'form-control' %>
            </div>

            <div class="col-md-6">
              <%= f.label :closing_date_probability, 'Closing Date / Probability', class: 'form-label' %>
              <%= f.text_field :closing_date_probability, class: 'form-control' %>
            </div>

            <div class="col-md-6">
              <%= f.label :value, 'Value', class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <%= f.text_field :value, class: 'form-control' %>
              </div>
            </div>

            <div class="col-12 mt-4">
              <div class="d-flex justify-content-between">
                <%= link_to 'Cancel', root_path, class: 'btn btn-outline-secondary' %>
                <%= f.submit 'Update Deal', class: 'btn btn-primary px-4' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
